<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/blue">
    <ImageView
        android:id="@+id/back_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/back_img_write"
        android:scaleType="centerInside"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:enabled="true"
        />


    <ImageView
        android:id="@+id/right_img1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/qr_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/right_img2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/qr_icon"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:layout_toLeftOf="@+id/right_img1"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/right_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text=""
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/right_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_toLeftOf="@+id/right_text1"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        />
</RelativeLayout>
